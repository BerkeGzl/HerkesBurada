<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="img/favicon.png">


    <!-- Bootstrap core CSS -->

    <script src="~/OuterTools/FlatAdmin/js/jquery.js"></script>
    <link href="~/OuterTools/FlatAdmin/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/OuterTools/FlatAdmin/css/bootstrap-reset.css" rel="stylesheet" />
    <link href="~/OuterTools/FlatAdmin/assets/bootstrap-fileupload/bootstrap-fileupload.css" rel="stylesheet" />
    <!--external css-->
    <link href="~/OuterTools/FlatAdmin/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/OuterTools/FlatAdmin/assets/advanced-datatable/media/css/demo_page.css" rel="stylesheet" />
    <link href="~/OuterTools/FlatAdmin/assets/advanced-datatable/media/css/demo_table.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/OuterTools/FlatAdmin/css/style.css" rel="stylesheet" />
    <link href="~/OuterTools/FlatAdmin/css/table-responsive.css" rel="stylesheet" />

    <link rel="stylesheet" type="text/css" href="~/OuterTools/FlatAdmin/assets/bootstrap-fileupload/bootstrap-fileupload.css" />
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->
    <!--common script for all pages-->

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

    <style>
        .field-validation-error {
            color: red;
        }
    </style>
</head>

<body>

    <section id="container" class="">
        <!--header start-->
        <header class="header white-bg">
            <div class="sidebar-toggle-box">
                <div data-original-title="Toggle Navigation" data-placement="right" class="icon-reorder tooltips"></div>
            </div>
            <!--logo start-->
            <a href="@Url.Action("Index", new { controller="Member", area=""})" class="logo">Herkes<span>Burada</span></a>
            <!--logo end-->
            <div class="top-nav ">
                <ul class="nav pull-right top-menu">
                    @*<li>
                            <input type="text" class="form-control search" placeholder="Search">
                        </li>*@
                    <!-- user login dropdown start-->
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <span class="username">@((Session["member"] as AppUser).UserName)</span>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu extended logout">
                            <div class="log-arrow-up"></div>
                            <li><a href="@Url.Action("MemberProfile", new { controller="MemberProfile", area="MemberHome" })"><i class=" icon-suitcase"></i>Profile</a></li>
                            <li><a href="@Url.Action("UpdateProfile", new { controller="MemberProfile", area="MemberHome" })"><i class="icon-cog"></i> Profil Düzenle</a></li>
                            <li><a href="@Url.Action("LogOut", new { area="", controller="Home"})"><i class="icon-key"></i> Çıkış Yap</a></li>
                        </ul>
                    </li>
                    <!-- user login dropdown end -->
                </ul>
            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu" id="nav-accordion">

                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-th"></i>
                            <span>Hesap</span>
                        </a>
                        <ul class="sub">
                            <li>@Html.ActionLink("Profil", "MemberProfile", new { controller = "MemberProfile", area = "MemberHome" })</li>
                            <li>@Html.ActionLink("Profil Düzenle", "UpdateProfile", new { controller = "MemberProfile", area = "MemberHome" })</li>
                        </ul>
                    </li>
                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!--main content start-->
        <section id="main-content">
            <section class="wrapper site-min-height">
                <!-- page start-->
                @RenderBody()
                @*Page content goes here*@
                <!-- page end-->
            </section>
        </section>
        <!--main content end-->
        <!--footer start-->
        <footer class="site-footer">
            <div class="text-center">
                @DateTime.Now.Year &copy; HERKESBURADA.
                <a href="#" class="go-top">
                    <i class="icon-angle-up"></i>
                </a>
            </div>
        </footer>
        <!--footer end-->
    </section>


</body>
</html>

