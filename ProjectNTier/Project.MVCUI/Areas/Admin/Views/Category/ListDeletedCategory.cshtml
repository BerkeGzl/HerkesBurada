@model List<Category>
@{
    ViewBag.Title = "ListDeletedCategory";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<title>Silinmiş Kategori Listesi</title>

<div class="panel panel-body">
    <div class="panel panel-default">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Kategori ID</th>
                    <th>Kategori Adı</th>
                    <th>Kategori Açıklaması</th>
                    <th>Güncelle</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Category item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.CategoryName</td>
                        <td>@item.Description</td>
                        <td>@Html.ActionLink("Güncelle", "UpdateCategory", new { id = item.ID }, new { @class = "btn btn-success" })</td>
                        <td>@Html.ActionLink("Sil", "DeleteCategory", new { id = item.ID }, new { @class = "btn btn-danger" })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


