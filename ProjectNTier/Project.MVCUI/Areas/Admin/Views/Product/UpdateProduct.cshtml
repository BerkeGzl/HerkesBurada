@model Tuple<Product, List<Category>>
@{
    ViewBag.Title = "UpdateProduct";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <div class="panel-body">
                    <div class="form">
                        @using (Html.BeginForm("UpdateProduct", "Product", FormMethod.Post, new { @class = "cmxform form-horizontal tasi-form", enctype = "multipart/form-data" }))
                        {
                            @Html.HiddenFor(x => x.Item1.ID)
                            <div class="form-group ">
                                <label for="firstname" class="control-label col-lg-2">Ürün İsmi</label>
                                <div class="col-lg-3">
                                    @Html.TextBoxFor(x => x.Item1.ProductName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="lastname" class="control-label col-lg-2">Ürün Fiyatı</label>
                                <div class="col-lg-3">
                                    @Html.TextBoxFor(x => x.Item1.UnitPrice, new { @class = "form-control", type = "number" })
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="username" class="control-label col-lg-2">Kategorisi</label>
                                <div class="col-lg-3">
                                    @Html.DropDownListFor(x => x.Item1.CategoryID, new SelectList(Model.Item2, "ID", "CategoryName"), "Lütfen Seçiniz", new { @class = "btn btn-white dropdown-toggle" })
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="password" class="control-label col-lg-2">Stok Miktarı</label>
                                <div class="col-lg-3">
                                    @Html.TextBoxFor(x => x.Item1.UnitsInStock, new { @class = "form-control", type = "number" })
                                </div>
                            </div>
                            <div class="form-group last">
                                <label class="control-label col-md-3">Resim Yükleme</label>
                                <div class="col-md-9">
                                    <div class="fileupload fileupload-new" data-provides="fileupload">
                                        <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;">
                                            <img src="@Model.Item1.ImagePath" alt="" />
                                        </div>
                                        <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
                                        @if (Model.Item1.ImagePath != "Dosya Boş")
                                        {
                                            @Html.CheckBox("resimSil") <b style="color:red">Resmi Sil?</b>
                                        }
                                        <div>
                                            <span class="btn btn-white btn-file">
                                                <span class="fileupload-new"><i class="icon-paper-clip"></i> Resim Seç</span>
                                                <span class="fileupload-exists"><i class="icon-undo"></i> Değiştir</span>
                                                <input name="resim" type="file" class="default" />
                                            </span>
                                            <a href="#" class="btn btn-danger fileupload-exists" data-dismiss="fileupload"><i class="icon-trash"></i> Sil</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    <button class="btn btn-danger" type="submit">Güncelle</button>
                                    @Html.ActionLink("İptal", "ListProduct", null, new { @class = "btn-btn-default" })
                                </div>
                            </div>
                        }



                    </div>
                </div>
            </section>
        </div>
    </div>

